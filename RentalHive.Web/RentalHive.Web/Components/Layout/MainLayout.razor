@inherits LayoutComponentBase

<div class="min-h-screen flex flex-col bg-gray-100 text-gray-800">

    <!-- Header containing the Navigation Menu -->
    <header class="bg-white shadow-md sticky top-0 z-50">
        <NavMenu />
    </header>

    <!-- Main content area where pages will be rendered -->
    <main class="flex-grow container mx-auto p-4 sm:p-6 lg:p-8">
        @Body
    </main>

    <!-- Professional Footer -->
    <footer class="bg-gray-800 text-white">
        <div class="container mx-auto py-8 px-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="text-lg font-bold mb-4">RentalHive</h3>
                    <p class="text-gray-400">Your one-stop platform for renting cars, boats, and machinery in Sweden.</p>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Explore</h3>
                    <ul class="space-y-2">
                        <li><a href="/cars" class="hover:text-indigo-400 transition-colors">Cars & Vans</a></li>
                        <li><a href="/boats" class="hover:text-indigo-400 transition-colors">Boats</a></li>
                        <li><a href="/machines" class="hover:text-indigo-400 transition-colors">Machinery</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">About</h3>
                    <ul class="space-y-2">
                        <li><a href="/about-us" class="hover:text-indigo-400 transition-colors">About Us</a></li>
                        <li><a href="/how-it-works" class="hover:text-indigo-400 transition-colors">How It Works</a></li>
                        <li><a href="/contact" class="hover:text-indigo-400 transition-colors">Contact</a></li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-4">Legal</h3>
                    <ul class="space-y-2">
                        <li><a href="/privacy-policy" class="hover:text-indigo-400 transition-colors">Privacy Policy</a></li>
                        <li><a href="/terms-of-service" class="hover:text-indigo-400 transition-colors">Terms of Service</a></li>
                    </ul>
                </div>
            </div>
            <div class="mt-8 pt-8 border-t border-gray-700 text-center text-gray-500">
                <p>&copy; @DateTime.Now.Year RentalHive. All rights reserved.</p>
            </div>
        </div>
    </footer>

</div>
