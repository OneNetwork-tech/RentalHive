@page "/rent-out"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white p-8 rounded-xl shadow-lg mb-8">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Rent Out Your Item</h1>
            <p class="text-gray-600">Add your car, boat, or machine to the RentalHive platform and start earning today.</p>
        </div>

        <!-- The form for creating a new rental item will be a separate component -->
        <CreateRentalItemForm />

    </div>
</div>
